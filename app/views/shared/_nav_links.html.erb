<%= link_to 'Home', root_path, method: 'get', class: "btn btn-secondary" %>
<% if session[:user_id].present? %>
	<%= link_to 'Community', communities_path, method: 'get', class: "btn btn-secondary"%>
	<% if current_user.is_admin %>
		<%= link_to 'Approve', approves_path, method: 'get', class: "btn btn-primary" %>
	<%end%>
	<%= link_to 'Post a video', post_videos_path, method: 'get', class: "btn btn-primary" %>
	<%= link_to 'Logout', session_path(session[:user_id]), method: 'delete', class: "btn btn-secondary" %>
<%else%>
	<%= link_to 'Login', new_session_path, method: 'get', class: "btn btn-secondary mr-sm-2" %>
	<%= link_to 'Sign Up', new_registration_path, method: 'get', class: "btn btn-primary mr-sm-2" %>
<%end%>