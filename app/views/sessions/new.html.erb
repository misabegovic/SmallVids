<div class="container">
  <div class="col-md-8 offset-md-2 mt-5 mb-5">
    <h2 class="text-center">Login</h2>
  </div>
  <%= form_for :session, url: sessions_path, method: :post do |f|%>
    <div class="form-group row">
      <%= f.label :username, 'Username', class: "col-md-2 offset-md-2 col-form-label" %>
      <div class="col-md-6">
         <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag :password, 'Password', class: "col-md-2 offset-md-2 col-form-label" %>
      <div class="col-md-6">
        <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-md-8 offset-md-2 mt-2 d-flex justify-content-start">
        <%= f.submit "Login", class: "btn btn-primary ml-auto" %>
      </div>
    </div>
  <% end %>
  <% if flash[:error].present? %>
    <div class="alert alert-danger col-md-8 offset-md-2" role="alert">
      <%= flash[:error] %>
    </div>
  <%end%>
</div>