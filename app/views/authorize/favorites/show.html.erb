<div class="container">
  <div class="row">
    <div class="col-2">
      <%= link_to 'Back to Profile', profile_path(@user), class: "btn btn-secondary"%>
    </div>
  </div>
  <br>
  <div class="row">
    <%if @followed.nil? == false%>
      <div class="col-6">
        <div class="row">
          <h5>Followed by:</h5>
        </div>
        <div class="row">
          <% @followed.find_each do |user|%>
            <%=link_to user.username, profile_path(user)%>
          <%end%>
        </div>
      </div>
    <%elsif @favorites.nil? == false%>
      <div class="col-6">
        <div class="row">
          <h5>Follows:</h5>
        </div>
        <div class="row">
          <% @favorites.find_each do |user|%>
            <%=link_to user.username, profile_path(user)%>
          <%end%>
        </div>
      </div>
    <%end%>
  </div>
</div>