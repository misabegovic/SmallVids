<div class="container">
  <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
    <%= form_for :user, url: profile_path(@user.id), method: :patch do |f|%>
      <div class="form-group row">
        <%= f.label :profile_photo, 'Profile Photo',class: "col-md-2 offset-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.file_field :profile_photo , value: @user.profile_photo %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :username, class: "col-md-2 offset-md-2 col-form-label" %>
        <div class="col-md-6">
           <%= f.text_field :username, value: @user.username, class: "form-control", placeholder: "Username" %>
        </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-md-2 offset-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, 'Confirm Password', class: "col-md-2 offset-md-2 col-form-label" %>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-8 offset-md-2 mt-2 d-flex justify-content-start">
          <%= f.submit "Save Changes", class: "btn btn-primary ml-auto", id:"submitSignUp" %>
        </div>
      </div>
    <%end%>
  </main>
</div>