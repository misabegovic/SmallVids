<div class="container">
	<div class="row">
		<div class="col-2 sidebar">
			<%= render @categories%>
		</div>
		<div class="col-3">
			<div class="row">
				<%= link_to "New Message", new_message_path, method: :get, class: "btn btn-primary btn-sm float-xs-right" %>
			</div>
			<div class="list-group row">
				<%= render @messages.order(created_at: :desc) %>
			</div>
		</div>
		<div class="col-7">
			<div id="container">
				<br/>
				<%= form_for @message, url: messages_path, method: :post do |f| %>
					<%= f.text_field :to_id, class: "form-control", placeholder: 'To: Username' %>
					<br/>
					<div class="field">
						<%= f.text_field :subject, class: "form-control", remote: true, placeholder: "Subject" %>
					<br/>
					<p>Tag it: </p>
					<%= f.text_field :tag_list, class: "form-control" %>
					<small>seperate each tag with a comma</small>
					<br/>
					<br/>
					<%= f.text_area :content, class: "form-control", remote: true, placeholder: "Content" %>
					<br/>
					</div>
					<div class="actions">
					<br/>
						<%= f.submit "Send Message", class: "btn btn-primary btn-sm float-xs-left", remote: true%>
					</div>
				<%end%>
			</div>
		</div>
	</div>
</div>
